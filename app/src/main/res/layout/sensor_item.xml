<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/emojiForAdapter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/cityAndDateAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/emojiForAdapter"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/emojiForAdapter" />

        <TextView
            android:id="@+id/aqiAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cityAndDateAdapter"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/emojiForAdapter"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/emojiForAdapter" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>